<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE language SYSTEM "language.dtd">
<language name="ccxx" version="1.00" kateversion="2.4" section="Sources" extensions="*.ccxx">
  <highlighting>
    <list name="keywords">
      <item>class</item>
      <item>enum</item>
      <item>var</item>
      <item>const</item>
      <item>struct</item>
      <item>return</item>
      <item>if</item>
      <item>else</item>
      <item>while</item>
      <item>for</item>
      <item>and</item>
      <item>or</item>
      <item>not</item>
      <item>in</item>
      <item>where</item>
      <item>true</item>
      <item>false</item>
      <item>switch</item>
      <item>case</item>
      <item>namespace</item>
      <item>public</item>
      <item>private</item>
      <item>internal</item>
      <item>protected</item>
      <item>function</item>
      <item>from</item>
      <item>import</item>
      <item>export</item>
      <item>as</item>
      <item>until</item>
      <item>throw</item>
      <item>catch</item>
      <item>skip</item>
      <item>outer</item>
      <item>continue</item>
      <item>break</item>
      <item>finally</item>
      <item>delete</item>
      <item>new</item>
      <item>f</item>
      <item>target</item>
      <item>host</item>
    </list>
    <list name="Types">
      <item>char</item>
      <item>unsigned</item>
      <item>signed</item>
      <item>short</item>
      <item>long</item>
      <item>int</item>
      <item>double</item>
      <item>float</item>
      <item>bool</item>
    </list>
    <contexts>
      <context attribute="Normal Text" lineEndContext="#pop" name="Normal Text">
        <keyword attribute="Keyword" context="#stay" String="keywords" />
        <keyword attribute="DataType" context="#stay" String="Types" />
        <DetectChar attribute="String" context="string" char="&quot;" />
        <StringDetect attribute="Comment" context="LineComment" String="//"/>
        <StringDetect attribute="Comment" context="MultiLineComment" String="/*"/>
        <StringDetect attribute="CharLiteral" context="CharLiteral" String="'"/>
        <RegExpr attribute="Identifier" context="#stay" String="[_a-zA-Z][_a-zA-Z0-9]*" />
        <!-- <DetectChar attribute="SpecialBuiltin" context="specialBuiltin" char="&lt;" /> -->
        <RegExpr attribute="SpecialBuiltin" context="#stay" String="&lt;[_a-zA-Z][_a-zA-Z0-9]*&gt;"/>

        <Int attribute="Number"/>
        <Float attribute="Number"/>
      </context>
      <context attribute="String" lineEndContext="#stay" name="string">
        <DetectChar attribute="String" context="#pop" char="&quot;" />
      </context>
      <!-- <context attribute="SpecialBuiltin" lineEndContext="#stay" name="specialBuiltin">
        <DetectChar attribute="SpecialBuiltin" context="#pop" char="&gt;" />
      </context> -->

      <context attribute="CharLiteral" lineEndContext="#stay" name="CharLiteral">
        <DetectChar attribute="CharLiteral" context="#pop" char="'" />
      </context>
      <context name="LineComment" attribute="Comment" lineEndContext="#pop">q
        <DetectSpaces />
        <DetectIdentifier />
      </context>
      <context name="MultiLineComment" attribute="Comment" lineEndContext="#stay">
        <DetectSpaces />
        <DetectIdentifier />
        <StringDetect attribute="Comment" context="#pop" String="*/"/>
      </context>
    </contexts>
    <itemDatas>
      <itemData name="Normal Text" defStyleNum="dsNormal" />
      <itemData name="Keyword" defStyleNum="dsKeyword" />
      <itemData name="String" defStyleNum="dsString" />
      <itemData name="Comment" defStyleNum="dsComment" />
      <itemData name="Identifier" defStyleNum="dsFunction" />
      <itemData name="DataType" defStyleNum="dsDataType" />
      <itemData name="Number" defStyleNum="dsDecVal" />
      <itemData name="CharLiteral" defStyleNum="dsChar" />
      <itemData name="SpecialBuiltin" defStyleNum="dsPreprocessor" />

    </itemDatas>
  </highlighting>
  <general>
    <comments>
      <comment name="singleLine" start="//"/>
      <comment name="multiLine" start="/*" end="*/" region="Comment"/>
    </comments>
    <keywords casesensitive="1"/>
  </general>
</language>
